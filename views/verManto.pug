extends layout
block contenido

    .container
        h1.text-center 
            h2.text-center Ultimos Mantenimientos: 
                a.badge.badge-info(href=`/buscarPlacas?campoPlacas=${resCliente.placas}`)= `${resCliente.placas}`
        br
        br
    .container
        table.table
            caption=`Lista de Mantenimientos, placas: ${resCliente.placas}`
            thead
                tr
                th(scope='col') #
                th(scope='col') Fecha
                th(scope='col') Opciones
            tbody
                each manto in resManto
                    tr
                        th(scope='row')= num = num + 1
                        td
                            h4= manto.fechaCreacion
                        td
                            .row.align-items-center
                                .col
                                    a.btn.btn-info.btn-lg.active(href='#' role='button' aria-pressed='true') Ver
                                .col
                                    a.btn.btn-info.btn-lg.active(href=`/mantenimiento/editar/${manto.id}` role='button' aria-pressed='true') Editar
                                .col
                                    button.btnEliminarManto.btn.btn-danger.btn-lg(type='button' data-idManto=`${manto.id}`) Eliminar

                else
                    tr 
                        td 
                    .alert.alert-warning(role='alert')
                        | No hay datos &mdash;Ingrese nuevos datos en la opcion: Agregar Mantenimiento!
                